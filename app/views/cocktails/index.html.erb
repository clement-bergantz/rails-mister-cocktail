<div class="container">
	<h1>Cocktails</h1>
	<% @cocktails.each do |cocktail| %>
		<p><%= cocktail.name %></p>
		<% if cocktail.photo? %>
			<%= cl_image_tag cocktail.photo.path, width: 200, height: 300, crop: :fill %>
		<% end %>
		<%= link_to 'View details', cocktail_path(cocktail), class: "btn btn-primary" %>
		<%= link_to 'Delete', 'cocktails#destroy', class: "btn btn btn-primary" %>
	<% end %>
	<%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn btn-primary" %>
</div>
